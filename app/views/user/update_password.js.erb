<% if !@error.blank? %>
  $('#password-error').removeClass("hidden");
  $('#password-error').html("<%= @error %>");
  $('#password-error').focus();
<% elsif @user.errors.any? %>
  $('#password-error').removeClass("hidden");
  $('#password-error').html("Unexpected Error");
  $('#password-error').focus();
<% else  %>
  $('#password-error').addClass("hidden");
  $('#password-error').html("");
  $('#_user_password').val("");
  $('#_user_password_confirmation').val("");
  close_modal('#user_password_modal');
  $('#results_div').css('background-color', '#007FAD');
  $('#results_div').html("Update Successful.");
  $('#results_div').show();
  $('#results_div').focus();
  setTimeout(function(){
    $('#results_div').hide();
  }, 5000)
<% end %>

