<style>
.hidden {
  display: none;
  visibility: hidden;
}
.shown {
  display: block;
visibility: visible;
}


.modalDialog {
  position: fixed;
  font-family: Arial, Helvetica, sans-serif;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  background: rgba(0,0,0,0.8);
  z-index: 99999;
  opacity:0;
  -webkit-transition: opacity 400ms ease-in;
  -moz-transition: opacity 400ms ease-in;
  transition: opacity 400ms ease-in;
  pointer-events: none;
}
.modalDialog:target {
  opacity:1;
  pointer-events: auto;
}

.modalDialog > div {
  width: 400px;
  position: relative;
  margin: 10% auto;
  padding: 5px 20px 13px 20px;
  border-radius: 4px;
  background-color: white;
}
.close {

  color: #cecece;
  line-height: 25px;
  position: absolute;
  right: -1px;
  text-align: center;
  top: -1px;
  width: 24px;
  text-decoration: none;
  font-weight: bold;

}

.close:hover { background: #00d9ff; }

</style>

<div class="content" id="wrapper">
<%= form_tag(:user_create,  :method => 'POST', remote: true) do %>
 <%= render 'form' %>
    <% end %>
</div>